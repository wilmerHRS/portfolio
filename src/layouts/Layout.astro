---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es-PE">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@200;300;400&display=swap');
	/* @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@700&family=Nunito:wght@200;300;400&family=Open+Sans:wght@500&display=swap'); */
	@import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@700&family=Nunito:wght@200;300;400&family=Open+Sans:wght@500&family=Poppins:wght@300;400;500;600;700&display=swap');

	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--light-global: rgba(255, 255, 255, 1);
		--light-color: rgba(65, 129, 255, 1);
		--light-bg-1: rgba(240, 240, 240, 1);
		--light-bg-2: rgba(213, 213, 213, 1);

		--dark-global: rgba(11, 12, 26, 1);
		--dark-color: rgba(77, 223, 255, 1);
		--dark-bg-1: rgba(26, 27, 40, 1);
		--dark-bg-2: rgba(67, 67, 67, 1);
	}

	html {
		font-family: 'Nunito', system-ui, sans-serif;
		background-color: var(--light-global);
		scroll-behavior: smooth;
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	/* dark color */

	.dark {
		background-color: var(--dark-global);
	}

	.dark .f-color {
		color: var(--dark-color);
	}

	.dark .bg-color-gray-1 {
		background-color: var(--dark-bg-1);
	}

	.dark .bg-color-gray-2 {
		background-color: var(--dark-bg-2);
	}

	.dark .bg-color {
		background-color: var(--dark-color);
	}

	.dark .bg-color-hover {
		background-color: inherit;
		border: 2px solid var(--dark-color);
	}

	.dark .bg-color-hover:hover {
		background-color: var(--dark-color);
		border: none;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Josefin Sans', sans-serif;
		font-family: 'Nunito', sans-serif;
		font-family: 'Open Sans', sans-serif;
		font-family: 'Poppins', sans-serif;
	}

	.font-family {
		font-family: 'Josefin Sans', sans-serif;
		font-family: 'Nunito', sans-serif;
		font-family: 'Open Sans', sans-serif;
		font-family: 'Poppins', sans-serif;
	}

	.padding-top {
    padding-top: 52px;
  }

	html:not(.dark) .shadow-botton-content {
    box-shadow: 0px 0px 28px 2px rgba(125,125,125,0.75);
		-webkit-box-shadow: 0px 0px 28px 2px rgba(125,125,125,0.75);
		-moz-box-shadow: 0px 0px 28px 2px rgba(125,125,125,0.75);
  }

	.shadow-botton-content {
    box-shadow: 0px 0px 28px 4px rgba(255,252,252,0.50);
		-webkit-box-shadow: 0px 0px 28px 4px rgba(255,252,252,0.50);
		-moz-box-shadow: 0px 0px 28px 4px rgba(255,252,252,0.50);
  }

	@media screen and (max-height: 524px) {
    .c-height {
      height: 100%;
      padding-top: 70px;
      padding-bottom: 70px;
    }
  }

	@media screen and (max-width: 640px) and (min-width: 425px) {
    .c-contact-padding {
      padding-top: 30px;
      padding-bottom: 30px;
      padding-right: 30px;
      padding-left: 30px;
    }
  }

	/* Scroll */

	/* width */
	::-webkit-scrollbar {
		width: 8px;
	}

	/* Track */
	::-webkit-scrollbar-track {
		/* box-shadow: inset 0 0 5px grey;  */
		background-color: inherit;
		border-radius: 10px;
		margin-top: 3px;
		margin-bottom: 3px;
	}

	html:not(.dark) ::-webkit-scrollbar-thumb {
		background-color: rgb(210, 217, 228);
	}

	html:not(.dark) ::-webkit-scrollbar-thumb:hover {
		background-color: rgb(59, 130, 246);
	}
	
	/* Handle */
	::-webkit-scrollbar-thumb {
		background-color: rgb(54, 54, 65);
		border-radius: 10px;
	}

	/* Handle on hover */
	::-webkit-scrollbar-thumb:hover {
		background-color: rgb(34, 211, 238);
	}
</style>
