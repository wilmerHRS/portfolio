---
import { Icon } from "astro-icon";

interface Props {
  title: string;
  href: string;
}

const { title, href }: Props = Astro.props;
---

<a
  class="flex items-center border border-zinc-300 dark:border-zinc-600 py-2.5 pl-3 pr-5 mb-2 rounded-md color-hover min-w-full hover:bg-zinc-300 dark:hover:bg-zinc-600 transition ease-in-out"
  href={href}
  target="_blank"
>
  <Icon name="bx:bxl-github" class="w-6 h-6" />
  <span class="pl-3">{title}</span>
</a>
